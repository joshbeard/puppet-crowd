<Context path="/openidserver" docBase="../../crowd-openidserver-webapp">

    <Resource name="jdbc/CrowdIDDS" auth="Container" type="javax.sql.DataSource"
              username="<%= scope.lookupvar('crowd::iddbuser') %>"
              password="<%= scope.lookupvar('crowd::iddbpassword') %>"
              driverClassName="<%= scope.lookupvar('crowd::_iddbdriver') %>"
              url="<%= scope.lookupvar('crowd::iddburl') %>?autoReconnect=true&amp;useUnicode=true&amp;characterEncoding=utf8"
              <% if scope.lookupvar('crowd::iddb') == 'mysql' %>
              validationQuery="Select 1"
	      <% elseif scope.lookupvar('crowd::iddb') == 'mssql' %>
	      validationQuery="Select 1"
              <% end %>
            />

    <Manager className="org.apache.catalina.session.PersistentManager" saveOnRestart="false"/>

</Context>
